{{define "title"}}Your Account{{end}}
{{define "main"}}
    <h2>Your Account</h2>
    {{with .User}}
        <table>
            <tr>
                <th>Name</th>
                <td>{{.Name}}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{.Email}}</td>
            </tr>
            <tr>
                <th>Joined</th>
                <td>{{humanDate .Created}}</td>
            </tr>
        </table>
        <div class='metadata'>
        <a class='strong' href="/account/password/change">Change account Password</a>
        </div>
    {{end }}
{{end}}
